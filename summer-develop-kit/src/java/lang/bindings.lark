	public Object value{
		&{
			if(this._target.dataContext.dataItem == null){
				return null;
			} else {
				if(this.isDirectBinding){
					return this._target.dataContext.dataItem;
				} else {
					return this._target.dataContext.dataItem[this.property];
				}
			}
		}
	}
	
	public void inject(Node target, String[] targetProperties){
  		switch(this._mode){
  		case TwoWay:
  			if(target instanceof HTMLElement){
	  			attachTarget((HTMLElement)_target, _targetProperty);
  			}
  		case OneWay:
  			_target.dataContext.addBinding(this);
  		case OneTime:
  			updateTarget();
		}
	}

	@Override
	public void propertyChange(Object source, PropertyChangeEvent evt) {
		updateTarget(this._target, this._targetProperties, source[evt.propertyName]);		
	}
		
	private void updateTarget(Node node, String property1, String property2, Object data){
		if(this._updateTargetCallback != null){
			this._updateTargetCallback(node, property1, property2, data);
		} else{
			internalUpdateTarget();
		}
	}

	private void internalUpdateTarget() {
		if(isDirectBinding){
			if(callback != null){
				callback(_target, _targetProperties, _target.dataContext.dataItem);  
			} else {
				if(_target.dataContext.dataItem != null){
					if(_targetProperties == null){
						_target[_targetProperties] = _target.dataContext.dataItem;
					} else {
						_target[_targetProperties] = _target.dataContext.dataItem;
					}
				} else {
		 			if([_targetProperties] == null){
						_target[_targetProperties] = null;
					} else {
						_target[_targetProperties] = null;
					}
				}  
			}
		} else {
			if(_target.dataContext.dataItem != null){
				if(callback != null){
					callback(_target, _targetProperties, _target.dataContext.dataItem[this.property]);
				} else {
					if(_targetProperty1 == null){
						if(_target[_targetProperty] !== _target.dataContext.dataItem[this.property]){
							_target[_targetProperty] = _target.dataContext.dataItem[this.property];
						}
					} else {
						_target[_targetProperty][_targetProperty1] = _target.dataContext.dataItem[this.property];
					}
				}
			} else {
				if(this.callback != null){
					this.callback(_target, _targetProperty, _targetProperty1, null);
				} else {
					if(_targetProperty1 == null){
						_target[_targetProperty] = null;
					} else {
						_target[_targetProperties] = null;
					}
				}
			}
		}
	}
	
	private void setAttribute(String[] properties, Object data){
		Object tag = this._target;
		int length = properties.length; 
		for(int index = 0 ; index < length - 1; index++){
			if(tag == null) return;
			tag = tag[property];
		}
		
		if(this._converter != null){
			data = this._converter.to(data);
		}
		
		Object oldValue = tag[properties[length-1]];
		if(data == oldValue){
			return;
		}
		
		if(this._updateTargetCallback != null){
			this._updateTargetCallback(this._target, properties, data);
		} else {
			tag[properties[length-1]] = data;
		}
	}
	
	private Object getAttribute(String[] properties){
		Object result = null;
		for(int index = 0 ; index < length - 1; index++){
			if(result == null) return result;
			result = result[property];
		}
		return result;
	}

	public void attachTarget(HTMLElement target, String property){
		// listen for lost focus and input 
		switch(_trigger) { 
			case LostFocus:
				target.addEventListener("blur", this::updateSource, false);
				break; 
			case PropertyChanged: 
				target.addEventListener("input", this::updateSource, false);
				target.addEventListener("change", this::updateSource, false);
				break;
			default:
		}  
	}
	
	public Object updateSource(final Event event){
		if(this._updateSourceCallback != null){
			return _updateSourceCallback();
		}
		return this.internalUpdateSource(event);
	}
	
	private Object internalUpdateSource(Event event) {
		if(isDirectBinding){
			_target.dataContext.dataItem = _target[this._property];
		} else {
			_target.dataContext.dataItem[property] = _target[this._targetProperty];
		}
		return null;
	}
}

