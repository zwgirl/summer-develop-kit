class Choice {
	private String _className;
	private String _h4ClassName;
	private String _ulClassName;
	private String _activeClient;
	private String _invocePerMonth;
	private String _staffLogins;
	private String _upgrades;
	private String _cert;
	private String _support;
	private String _eval1;
	
	Choice(String _className, String _h4ClassName, String _ulClassName, String _activeClient, String _invocePerMonth,
			String _staffLogins, String _upgrades, String _cert, String _support, String _eval1){
		this._className = _className;
		this._h4ClassName = _h4ClassName;
		this._ulClassName = _ulClassName;
		this._activeClient = _activeClient;
		this._invocePerMonth = _invocePerMonth;
		this._staffLogins = _staffLogins;
		this._upgrades = _upgrades;
		this._cert = _cert;
		this._support = _support;
		this._eval1 = _eval1;
	}
	
	public String className{
		&{
			return this._className;
		}
		+{
			this._className = value;
		}
	}
	public String h4ClassName{
		&{
			return this._h4ClassName;
		}
		+{
			this._h4ClassName = value;
		}
	}
	public String ulClassName{
		&{
			return this._ulClassName;
		}
		+{
			this._ulClassName = value;
		}
	}
	public String activeClient{
		&{
			return this._activeClient;
		}
		+{
			this._activeClient = value;
		}
	}
	public String invocePerMonth{
		&{
			return this._invocePerMonth;
		}
		+{
			this._invocePerMonth = value;
		}
	}
	public String staffLogins{
		&{
			return this._staffLogins;
		}
		+{
			this._staffLogins = value;
		}
	}
	public String upgrades{
		&{
			return this._upgrades;
		}
		+{
			this._upgrades = value;
		}
	}
	public String cert{
		&{
			return this._cert;
		}
		+{
			this._cert = value;
		}
	}
	public String support{
		&{
			return this._support;
		}
		+{
			this._support = value;
		}
	}
	public String eval1{
		&{
			return this._eval1;
		}
		+{
			this._eval1 = value; 
		}
	}
}

